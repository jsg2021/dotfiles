# export SSH_KEY_PATH="~/.ssh/rsa_id"

source ~/.dotfiles/aliases
source ~/.dotfiles/vars
# [[ -r $NVM_DIR/bash_completion ]] && . $NVM_DIR/bash_completion
bindkey -e

autoload zmv
autoload -Uz bracketed-paste-magic
zle -N bracketed-paste bracketed-paste-magic

